<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8">
    <title>チケッター</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': true %>
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:creator" content="@tktter_com">
    <meta name="og:image" content="<%= asset_url('twitter_card.png') %>">
    <% if params[:controller] == 'tickets' && params[:action] == 'show' %>
      <meta name="og:title" content="<%= @ticket.artist.name %>">
      <meta name="og:description" content="チケッターに出品中">
    <% else %>
      <meta name="og:title" content="チケッター">
      <meta name="og:description" content="SNSチケット売買サービス">
    <% end %>
    <link href="<%= image_path("logo.png") %>" rel="shortcut icon" />
    <link rel="apple-touch-startup-image" href="/logo.png">
    <link rel="apple-touch-icon-precomposed" href="/logo.png">
    <%= analytics_init if Rails.env.production? %>
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script>
      (adsbygoogle = window.adsbygoogle || []).push({
              google_ad_client: "ca-pub-9003125861263321",
                  enable_page_level_ads: true
                    });
    </script>
  </head>
    <body>
<!-- Drawer Menu -->
        <!--
        <div id="drawer">
            <%#= render partial: "layouts/drawer" %>
            <div id="drawer-overlay"></div>
        </div>
        -->
<!-- /Drawer Menu -->
        
        
    <%= render partial: "layouts/header" %>
    <%= render partial: "layouts/flash_messages", flash: flash %>
    <div class="container" style="min-height:calc(100vh - 85px);">
               
      <div class="contents"> 
        <%= yield %>
      </div>
    </div>
    <%= render partial: "layouts/footer" %>
  </body>
</html>
